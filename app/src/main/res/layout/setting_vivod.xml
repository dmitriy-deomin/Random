<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFON"
    android:id="@+id/fon_setting_vivod"
    android:gravity="center">

    <CheckBox
        android:text="Нумерация списка"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_numeracia_spiska"
        android:checked="false" />

    <dmitriy.deomin.random.Lab_text
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_k_numeracii"
        android:hint="Добавочный текст к номеру" />

    <dmitriy.deomin.random.Lab_text
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/razdelitel_spiska"
        android:hint='Разделитель списка значений (",")' />
    <dmitriy.deomin.random.Lab_text
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/simfol_conca_spiska"
        android:hint='Символ в конце списка (".")'
        android:paddingBottom="20dp" />

    <Button
        android:text="Сохранить"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_gotovo" />

</LinearLayout>